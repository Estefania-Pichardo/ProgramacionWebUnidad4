@model Actividad2RolesDeUsuario.Models.Docente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h2>Inicia sesión como docente</h2>
<section class="formulario">
    <form method="post" action="~/Home/IniciarSesionDocente">
        <label>Clave:</label>
        <input type="number" asp-for="Clave" required /><br />
        <label>Contraseña:</label>
        <input type="password" asp-for="Contraseña" required /><br />

        <input type="submit" value="Entrar" class="ingresar"/><br />

        @Html.ValidationSummary()
    </form>
</section>
