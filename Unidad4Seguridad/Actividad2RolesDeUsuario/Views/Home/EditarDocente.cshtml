@model Actividad2RolesDeUsuario.Models.Docente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h2>Editar datos del docente</h2>
<section class="formulario">
    <form method="post" action="~/Home/EditarDocente">
        <input type="hidden" asp-for="Id" />
        <label>Clave:</label>
        <input type="number" asp-for="Clave" readonly required /><br />
        <label>Nombre completo:</label>
        <input type="text" asp-for="Nombre" required /><br />

        <input type="submit" value="Editar" /><br />
        <a href="~/Home/VerDocentes">
            <input type="button" value="Cancelar" />
        </a>

        @Html.ValidationSummary()
    </form>
</section>