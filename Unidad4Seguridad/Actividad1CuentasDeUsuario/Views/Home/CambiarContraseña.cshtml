        <label>Contraseña nueva:</label>
        <input type="password" name="contraseñaNueva1" required /><br />
        <label>Confirma tu nueva contraseña:</label>
        <input type="password" required  name="contraseñaNueva2"/><br />
        @Html.ValidationSummary()
        <input type="submit" value="Cambiar Contraseña" />
        
    </form>

</section>

<script>
    function submit(){
        alert('La contraseña se cambio exitosamente');
    }
</script>