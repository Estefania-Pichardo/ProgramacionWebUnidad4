@model Actividad1CuentasDeUsuario.Models.Usuario
@{
    Layout = "_Layout";
}

<h2>ActivarCuenta</h2>

<section class="formulario">
    <p>
        Se envio un correo electronico a la direccion que registraste con un codigo de confirmacion de cuenta, porfavor,
        ingresa el codigo aqui
    </p>
    <form method="post" action="~/Home/ActivarCuenta">
        <label>Código:</label>
        @*<label>Activar cuenta de correo electronico @User.Claims.FirstOrDefault(x => x.Type == "CorreoActivar").Value</label>*@

        @*<input type="hidden" value="@User.Claims.FirstOrDefault(x => x.Type == "CorreoActivar").Value" name="correo" />*@
        <input type="number" required name="codigo" style="display:block; width:80%;"/><br />

        <input type="submit" value="Activa mi cuenta" />
    </form>
</section>

